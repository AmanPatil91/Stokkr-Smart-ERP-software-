generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("STAFF")
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Product {
  id                String             @id @default(cuid())
  name              String
  sku               String             @unique
  description       String?
  price             Decimal            @db.Decimal(10, 2)
  cost              Decimal            @db.Decimal(10, 2)
  expiryAlertDays   Int                @default(7)
  lowStockAlertQty  Int                @default(10)
  batches           Batch[]
  invoiceItems      InvoiceItem[]
  stockTransactions StockTransaction[]
}

model Batch {
  id                String             @id @default(cuid())
  batchNumber       String
  expiryDate        DateTime
  quantity          Int
  costPerItem       Decimal            @db.Decimal(10, 2)
  productId         String
  accountsPayable   AccountsPayable?
  product           Product            @relation(fields: [productId], references: [id])
  stockTransactions StockTransaction[]
}

model StockTransaction {
  id              String   @id @default(cuid())
  productId       String
  batchId         String?
  transactionType String
  quantity        Int
  date            DateTime @default(now())
  notes           String?
  batch           Batch?   @relation(fields: [batchId], references: [id])
  product         Product  @relation(fields: [productId], references: [id])
}

model Party {
  id                 String              @id @default(cuid())
  name               String
  partyType          String
  contactNumber      String?
  email              String?
  gstin              String?
  invoices           Invoice[]
  ledgerTransactions LedgerTransaction[]
}

model Invoice {
  id                 String              @id @default(cuid())
  invoiceNumber      String              @unique
  invoiceType        String
  date               DateTime            @default(now())
  totalAmount        Decimal             @db.Decimal(10, 2)
  partyId            String
  accountsReceivable AccountsReceivable?
  party              Party               @relation(fields: [partyId], references: [id])
  items              InvoiceItem[]
}

model InvoiceItem {
  id           String   @id @default(cuid())
  invoiceId    String
  productId    String
  quantity     Int
  pricePerItem Decimal  @db.Decimal(10, 2)
  subtotal     Decimal  @db.Decimal(10, 2)
  cogsPerItem  Decimal? @db.Decimal(10, 2)
  cogsTotal    Decimal? @db.Decimal(10, 2)
  invoice      Invoice  @relation(fields: [invoiceId], references: [id])
  product      Product  @relation(fields: [productId], references: [id])
}

model LedgerTransaction {
  id              String   @id @default(cuid())
  partyId         String
  transactionType String
  amount          Decimal  @db.Decimal(10, 2)
  date            DateTime @default(now())
  description     String
  party           Party    @relation(fields: [partyId], references: [id])
}

model Expense {
  id              String   @id @default(cuid())
  category        String
  title           String
  amount          Decimal  @db.Decimal(10, 2)
  expenseDate     DateTime
  paymentMode     String
  referenceNumber String?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model AccountsPayable {
  id            String   @id @default(cuid())
  batchId       String   @unique
  totalAmount   Decimal  @db.Decimal(10, 2)
  payableAmount Decimal  @db.Decimal(10, 2)
  paymentStatus String   @default("PENDING")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  batch         Batch    @relation(fields: [batchId], references: [id], onDelete: Cascade)
}

model AccountsReceivable {
  id               String   @id @default(cuid())
  invoiceId        String   @unique
  totalAmount      Decimal  @db.Decimal(10, 2)
  receivableAmount Decimal  @db.Decimal(10, 2)
  paymentStatus    String   @default("PENDING")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  invoice          Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}
