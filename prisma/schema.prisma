// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "mysql"
  url      = env("DATABASE_URL")
}

// User & Role Management
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("STAFF") // "ADMIN" or "STAFF"
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Inventory Management


// Existing Product model
model Product {
  id                      String             @id @default(cuid())
  name                    String
  sku                     String             @unique
  description             String?
  price                   Decimal            @db.Decimal(10, 2)
  cost                    Decimal            @db.Decimal(10, 2)
  expiryAlertDays         Int                @default(7)  // Days before expiry to trigger alert
  lowStockAlertQty        Int                @default(10) // Minimum stock threshold
  batches                 Batch[]
  stockTransactions       StockTransaction[]
  invoiceItems            InvoiceItem[]
}


model Batch {
  id            String             @id @default(cuid())
  batchNumber   String
  expiryDate    DateTime
  quantity      Int
  costPerItem   Decimal            @db.Decimal(10, 2)
  productId     String
  product       Product            @relation(fields: [productId], references: [id])
  stockTransactions StockTransaction[]
  // AP/AR: Link to accounts payable (for purchase batches)
  accountsPayable AccountsPayable?
}


model StockTransaction {
  id            String         @id @default(cuid())
  productId     String
  product       Product        @relation(fields: [productId], references: [id])
  batchId       String?        // ðŸ‘ˆ Add this field
  batch         Batch?         @relation(fields: [batchId], references: [id]) // ðŸ‘ˆ Add this relationship
  transactionType String         // "IN" or "OUT"
  quantity      Int
  date          DateTime       @default(now())
  notes         String?
}

// Accounting & Billing


model Party {
  id              String              @id @default(cuid())
  name            String
  partyType       String              // "CUSTOMER" or "SUPPLIER"
  contactNumber   String?             // ðŸ‘ˆ Add this field
  email           String?             // ðŸ‘ˆ Add this field
  gstin           String?
  invoices        Invoice[]
  ledgerTransactions LedgerTransaction[]
}

model Invoice {
  id            String        @id @default(cuid())
  invoiceNumber String        @unique
  invoiceType   String        // "SALES" or "PURCHASE"
  date          DateTime      @default(now())
  totalAmount   Decimal       @db.Decimal(10, 2)
  partyId       String
  party         Party         @relation(fields: [partyId], references: [id])
  items         InvoiceItem[]
  // AP/AR: Link to accounts receivable (for SALES invoices only)
  accountsReceivable AccountsReceivable?
}

model InvoiceItem {
  id            String  @id @default(cuid())
  invoiceId     String
  invoice       Invoice @relation(fields: [invoiceId], references: [id])
  productId     String
  product       Product @relation(fields: [productId], references: [id])
  quantity      Int
  pricePerItem  Decimal @db.Decimal(10, 2)
  subtotal      Decimal @db.Decimal(10, 2)
  
  // FIFO COGS: Cost of Goods Sold calculated at invoice creation time
  // For SALES invoices: COGS per item = weighted average cost from batches used (FIFO)
  // For PURCHASE invoices: COGS fields remain NULL as purchases don't have COGS
  cogsPerItem   Decimal? @db.Decimal(10, 2) // FIFO cost per item for sales
  cogsTotal     Decimal? @db.Decimal(10, 2) // Total COGS = cogsPerItem Ã— quantity
}

model LedgerTransaction {
  id            String    @id @default(cuid())
  partyId       String
  party         Party     @relation(fields: [partyId], references: [id])
  transactionType String    // "DEBIT" or "CREDIT"
  amount        Decimal   @db.Decimal(10, 2)
  date          DateTime  @default(now())
  description   String
}

// Expense Tracking
model Expense {
  id              String    @id @default(cuid())
  category        String    // "Rent", "Electricity", "Transportation Cost", "Staff Salary", "Loading / Unloading", "Packaging", "Office Supplies", "Internet / Mobile", "Maintenance", "Interest on Loans", "Miscellaneous"
  title           String    // Description / Title
  amount          Decimal   @db.Decimal(10, 2) // Must be positive
  expenseDate     DateTime  // Expense Date
  paymentMode     String    // "Cash", "Bank", "UPI"
  referenceNumber String?   // Optional reference number
  notes           String?   // Optional notes
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

// Accounts Payable - Tracks money owed to suppliers via purchase batches
model AccountsPayable {
  id              String    @id @default(cuid())
  batchId         String    @unique
  batch           Batch     @relation(fields: [batchId], references: [id], onDelete: Cascade)
  // Total batch amount (cost per item * quantity)
  totalAmount     Decimal   @db.Decimal(10, 2)
  // Payable amount defaults to total, can be reduced for partial payments
  payableAmount   Decimal   @db.Decimal(10, 2)
  // Payment status: "PENDING" if payableAmount > 0, "COMPLETED" if payableAmount = 0
  paymentStatus   String    @default("PENDING") // "PENDING" or "COMPLETED"
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

// Accounts Receivable - Tracks money owed by customers via sales invoices
model AccountsReceivable {
  id              String    @id @default(cuid())
  invoiceId       String    @unique
  invoice         Invoice   @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  // Total invoice amount
  totalAmount     Decimal   @db.Decimal(10, 2)
  // Receivable amount defaults to total, can be reduced for partial payments
  receivableAmount Decimal   @db.Decimal(10, 2)
  // Payment status: "PENDING" if receivableAmount > 0, "COMPLETED" if receivableAmount = 0
  paymentStatus   String    @default("PENDING") // "PENDING" or "COMPLETED"
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}